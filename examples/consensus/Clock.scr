module Clock;

type <java> "java.lang.Integer" from "rt.jar" as int;

global protocol Lock(role A, role B, role C)
{
	REQ (ts:int) from A to B;
	REQ (ts:int) from A to C;
	choice at B
	{
		ACK (ts:int) from B to A;
	}
	or
	{
		do Lock(B, A, C);
	}

	choice at C
	{
		ACK (ts:int) from C to A;
	}
	or
	{
		do Lock(C, A, B);
	}
	
	REL () from A to B;
	REL () from A to C;
}


